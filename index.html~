<!DOCTYPE html>
<html>
<head>
<style>
.myCanvas
{
border:10px solid #40403A;
position:relative;
}
</style>
</head>

<body onload="onload()">

<canvas id="myCanvas" class="myCanvas" width="900" height="500"  align="center">
</canvas>

<script type="text/javascript">
var canvas = null;
var img = null;
var ctx = null;
var tt,key=0;

var hero={

var x=450,y=200,frame=0;
img = new Image();
img.src = 'sprites/main.png';
function right()
{
   ctx.drawImage(img,(35*frame)+95,32,35,35,x,y,35,35);
    if(frame>=2)
    frame=0;
    else
    frame++;
    
   x+=5;     
}
};

function onload() 
{
  canvas = document.getElementById('myCanvas');
  ctx = canvas.getContext("2d");
  
}
function loaded() {
  
  tt=setInterval(redraw,250);
}

window.addEventListener("keypress", function(event){

     key=event.keyCode;
      // 97-left 100-right 115-down
  });
	   



function redraw()
 {
  ctx.fillStyle = '#FFFFFF';
  ctx.fillRect(0, 0, canvas.width, canvas.height);
  
  if(key>=97) //checking if keypressd
  {
    if(key==97)
    {
         hero.right();
    }

  }
}
 
					  
}		
</script> 

</body>
</html>
